<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.dialogbox.MainActivity">

    <TextView
        android:id="@+id/textview_from"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_marginStart="154dp"
        android:layout_marginLeft="154dp"
        android:gravity="center_horizontal"
        android:text="Åker från"
        android:textSize="30sp" />

    <TextView
        android:id="@+id/textview_to"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/textview_from"
        android:layout_alignParentStart="true"
        android:gravity="center_horizontal"
        android:text="Åker till"
        android:textSize="30sp" />

    <TextView
        android:id="@+id/textview_date"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/textview_to"
        android:layout_alignParentStart="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="1dp"
        android:gravity="center_horizontal"
        android:text="Datum"
        android:textSize="30sp" />

    <TextView
        android:id="@+id/textview_seats"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/textview_date"
        android:layout_alignParentStart="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="8dp"
        android:gravity="center_horizontal"
        android:text="Antal platser"
        android:textSize="30sp" />

    <TextView
        android:id="@+id/textview_date2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/textview_seats"
        android:layout_alignParentStart="true"
        android:layout_marginStart="0dp"
        android:gravity="center_horizontal"
        android:text="Datum2"
        android:textSize="30sp" />

    <Button
        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/textview_date2"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginStart="130dp"
        android:layout_marginLeft="130dp"
        android:layout_marginTop="48dp"
        android:layout_marginEnd="129dp"
        android:layout_marginRight="129dp"
        android:text="Lägg till ny resa" />

</RelativeLayout>